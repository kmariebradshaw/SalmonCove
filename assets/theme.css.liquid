.page-header { padding: 50px; }
.ttu { text-transform: uppercase; }
.ib { display: inline-block; }
.nm { margin: 0; }
.nmt { margin-top: 0; }
.nmb { margin-bottom: 0; }
body { 
  margin: 0;
  color: black;
}
html { padding-bottom: 0 !important; }
.tar { text-align: right; }
.fw { width: 100%; }
.flex-container, .flex-container-no{
  display: flex;
  align-items: center;
}
.tac { text-align: center; }
.subscript {font-size: 8pt;}
.half { width: 50%; }
.two-thirds { width: 66%; }
.quarter { width: 25%; }
.three-fourths { width: 75%; }
.third { width: 33%; }
.fe { align-self: flex-end; }
.jes { justify-content: space-evenly; }
.jcfs { justify-content: flex-start;  }
.jcfe { justify-content: flex-end; }
.jcc { justify-content: center; }
.accent { 
  font-family: chippewa-falls, sans-serif;
  font-weight: 500;
  font-style: normal
}
h1,h2,h3,h4,h5,a, span, input, th, select { 
  font-family: futura-pt-bold, sans-serif;
  font-weight: 700;
  font-style: normal;
}
p, textarea, td, ul, li, .error_message, .success_message { 
  font-family: futura-pt, sans-serif;
  font-weight: 400;
  font-style: normal;
} 
.background-orange {background-color: #ffc13d;}
.text-navy { color: #2c3485;}
.text-white { color: #fff; }
.border-white { border: 2px solid white; }
.background-white { background-color: #fff; }
@media only screen and (min-width: 1366px) {
  h1 {font-size: 36pt;}
   #index-page p { font-size: 22pt;  }
}
@media only screen and (min-width: 1100px) and (max-width: 1365px) {
  h1 { font-size: 30pt; }
  #index-page p { font-size: 18pt; }
} 
@media only screen and (min-width: 800px) and (max-width: 1099px) {

}
@media only screen and (min-width: 589px) and (max-width: 799px) {

}
@media only screen and (min-width: 589px) and (max-width: 680px) {
  body nav p { 
    color:#2c3485;
    margin: 10px;
  }
}
@media only screen and (min-width: 589px) {
  .mo { display: none; }
  #header { padding: 20px;  }
  #index-page .half { padding: 50px;}
  #page-logo {max-width: 100px;}
  #vest {
    background-size: contain;
    background-position: center;
  }
}
@media only screen and (max-width: 588px) {
  h1 { font-size: 22pt; } 
  h2 { font-size: 16pt; } 
  .flex-container { display: block; }
  .flex-container .half { width: 100%; }
  #index-page .half { padding: 30px;}
  .do { display: none; }
  .accent-padding { padding: 10px; }
  .half { width: 100%; }
  #header { padding: 15px;  }
  #page-logo {max-width: 75px;}
  #vest {
    background-size: 90%;
    background-position: center left;
  }
  #atf .half {
    background-image: url("{{'atf.png' | asset_url}}");
    background-repeat: no-repeat;
    background-position: bottom;
    background-size: contain;

  }
}

/* index page */
.accent-section .half { 
  min-height: 500px;
  box-sizing: border-box;
}
.highlight-section .half { 
  height: 300px;
  box-sizing: border-box;
}
#atf-prod-highlight {
  background-image: url("{{'atf.png' | asset_url }}");
  background-size: cover;
  background-repeat: no-repeat;
}
.button {
    width: fit-content;
    padding: 10px 20px;
    cursor: pointer;
}
.border-orange { border: 15px solid #ffc13d; }
.background-navy { background-color: #2c3485; }
.text-white { color: #fff; }
#close-vest, #top-vest  {
  background-image: url("{{'vest-close.jpg' | asset_url }}");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
#clasp-vest {
  background-image: url("{{'clasp.jpg' | asset_url }}");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
#zipper {
  background-image: url("{{'zipper.jpg' | asset_url }}");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: bottom;
}

#vest {
  background-image: url("{{'vest.png' | asset_url}}");
  background-repeat: no-repeat;
}

/* header */
nav p { 
  color:#2c3485;
  margin: 20px;
}

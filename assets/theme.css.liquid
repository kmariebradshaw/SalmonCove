/* footer */
footer ul { list-style: none; padding-left: 0; }
.email {
    width: 80%;
    box-sizing: border-box;
    margin: 20px 0;
    padding: 10px;
    border: 1px solid black;
}
.submit {
    width: 20%;
    box-sizing: border-box;
    margin: 20px 0 20px -5px;
    padding: 10px;
    background: black;
    color: white;
    border: 1px solid black;
}
footer .jlogo { margin: 0 80px; }
footer form {
    max-width: 400px;
    margin: 0 auto;
}
footer section { width: calc(50% - 55px);  margin: auto 20px;}

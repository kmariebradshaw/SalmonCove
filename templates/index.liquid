<script>
  $(document).ready(function () {
  setInterval(
    function() {
    var backgroundImage = $('.atf').attr("id")
    var x = backgroundImage.split('-')
    var y = parseInt(x[1]) + 1 
    if (y < 4) {
      var newId = "atf-" + y 
    }
    else {
      var newId = "atf-1"
    }
    $('.atf').attr("id", newId)
    }, 5000 ) 
  })
</script>
